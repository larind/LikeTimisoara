<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_first_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.larisa.liketimisoara.FirstScreen">


    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/atractions_button"
        android:textColor="@android:color/white"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:text="@string/atrractions_button"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/ro_flag"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:src="@drawable/ro"
        android:layout_marginStart="18dp"
        android:layout_alignStart="@+id/title_button"
        android:layout_alignTop="@+id/title_button" />

    <ImageButton
        android:id="@+id/en_flag"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginEnd="18dp"
        android:src="@drawable/en"
        android:layout_alignTop="@+id/title_button"
        android:layout_alignEnd="@+id/title_button" />

    <Button
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:background="@android:color/transparent"
        android:id="@+id/title_button"
        android:text="@string/app_title"
        android:textColor="@android:color/black"
        android:textSize="23sp"
        android:layout_marginTop="38dp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="100dp"
        android:src="@drawable/first"
        android:scaleType="centerCrop"
        android:paddingTop="200dp"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp" />

</RelativeLayout>
