<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_first_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.larisa.liketimisoara.FirstScreen">

    <Button
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:background="@color/colorPrimaryDark"
        android:alpha="0.25"
        android:id="@+id/atractions_button"
        android:layout_marginBottom="39dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Timisoara capitala culturala Europeana 2021"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textAlignment="center"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="101dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/timisoara"
        android:scaleType="centerCrop"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/en_flag"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/en"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/atractions_button"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="43dp" />

    <ImageButton
        android:id="@+id/ro_flag"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ro"
        android:layout_alignTop="@+id/en_flag"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp" />
</RelativeLayout>
