<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.larisa.liketimisoara.activity.DetailsActivity">

    <TextView
        android:id="@+id/attraction_title_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Cafeneaua Verde"
        android:textAllCaps="true"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/details_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/cafenea" />

    <TextView
        android:id="@+id/details_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Cafeneau verde este cea mai frumoasa cafenea ce o puteti intalni in Timisoara. Este situata in centrul orasului si acolo puteti sa va opriti dupa o zi in care ati vizitat multe locuri minunate din oras." />


    <Button
        android:id="@+id/details_imagebutton"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableTop="@android:drawable/ic_dialog_map"
        android:background="@android:color/holo_orange_light"
        android:text="Du-ma acolo"
        android:textColor="@android:color/background_dark"
        android:textAppearance="@style/TextAppearance.AppCompat"/>


</LinearLayout>


